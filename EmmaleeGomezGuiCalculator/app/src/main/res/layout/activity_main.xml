<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:background="@android:color/background_light"
    tools:context=".MainActivity">

    <!--Use of Chat GPT to help assign constraints from nested Linear Layout-->
    <EditText
        android:id="@+id/display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints="@string/autofill"
        android:hint="@string/autofill"
        android:inputType="text"
        android:digits="0123456789.+-*/âˆš"
        android:gravity="end"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:background="@drawable/button_gradient"
        android:fontFamily="@font/font"
        android:textSize="30sp"
        style="?android:attr/buttonStyleSmall"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/two"
        app:layout_constraintHorizontal_weight="1"/>

    <Button
        android:id="@+id/two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:background="@drawable/button_gradient"
        android:fontFamily="@font/font"
        android:textSize="30sp"
        style="?android:attr/buttonBarStyle"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintStart_toEndOf="@+id/one"
        app:layout_constraintEnd_toStartOf="@+id/three"
        app:layout_constraintHorizontal_weight="1"/>

    <Button
        android:id="@+id/three"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:background="@drawable/button_gradient"
        android:fontFamily="@font/font"
        android:textSize="30sp"
        style="?android:attr/buttonBarStyle"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintStart_toEndOf="@+id/two"
        app:layout_constraintEnd_toStartOf="@+id/add"
        app:layout_constraintHorizontal_weight="1"/>

    <Button
        android:id="@+id/add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:background="@drawable/button_gradient"
        android:fontFamily="@font/font"
        android:textSize="30sp"
        style="?android:attr/buttonBarStyle"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintStart_toEndOf="@+id/three"
        app:layout_constraintEnd_toStartOf="@+id/multiply"
        app:layout_constraintHorizontal_weight="1"/>

    <Button
        android:id="@+id/multiply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="*"
        android:background="@drawable/button_gradient"
        android:fontFamily="@font/font"
        android:textSize="30sp"
        style="?android:attr/buttonBarStyle"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintStart_toEndOf="@+id/add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"/>

    <Button
        android:id="@+id/four"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="4"
        android:background="@drawable/button_gradient"
        android:fontFamily="@font/font"
        android:textSize="30sp"
        style="?android:attr/buttonStyleSmall"
        app:layout_constraintTop_toBottomOf="@id/one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/five"
        app:layout_constraintHorizontal_weight="1"/>

    <Button
        android:id="@+id/five"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="5"
        android:background="@drawable/button_gradient"
        android:fontFamily="@font/font"
        android:textSize="30sp"
        style="?android:attr/buttonBarStyle"
        app:layout_constraintTop_toBottomOf="@id/two"
        app:layout_constraintStart_toEndOf="@+id/four"
        app:layout_constraintEnd_toStartOf="@+id/six"
        app:layout_constraintHorizontal_weight="1"/>

    <Button
        android:id="@+id/six"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="6"
        android:background="@drawable/button_gradient"
        android:fontFamily="@font/font"
        android:textSize="30sp"
        style="?android:attr/buttonBarStyle"
        app:layout_constraintTop_toBottomOf="@id/three"
        app:layout_constraintStart_toEndOf="@+id/five"
        app:layout_constraintEnd_toStartOf="@+id/subtract"
        app:layout_constraintHorizontal_weight="1"/>

    <Button
        android:id="@+id/subtract"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:background="@drawable/button_gradient"
        android:fontFamily="@font/font"
        android:textSize="30sp"
        style="?android:attr/buttonBarStyle"
        app:layout_constraintTop_toBottomOf="@id/add"
        app:layout_constraintStart_toEndOf="@+id/six"
        app:layout_constraintEnd_toStartOf="@+id/divide"
        app:layout_constraintHorizontal_weight="1"/>

    <Button
        android:id="@+id/divide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="/"
        android:background="@drawable/button_gradient"
        android:fontFamily="@font/font"
        android:textSize="30sp"
        style="?android:attr/buttonBarStyle"
        app:layout_constraintTop_toBottomOf="@id/multiply"
        app:layout_constraintStart_toEndOf="@+id/subtract"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"/>

    <Button
        android:id="@+id/seven"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="7"
        android:background="@drawable/button_gradient"
        android:fontFamily="@font/font"
        android:textSize="30sp"
        style="?android:attr/buttonStyleSmall"
        app:layout_constraintTop_toBottomOf="@id/four"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/eight"
        app:layout_constraintHorizontal_weight="1"/>

    <Button
        android:id="@+id/eight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="8"
        android:background="@drawable/button_gradient"
        android:fontFamily="@font/font"
        android:textSize="30sp"
        style="?android:attr/buttonBarStyle"
        app:layout_constraintTop_toBottomOf="@id/four"
        app:layout_constraintStart_toEndOf="@+id/seven"
        app:layout_constraintEnd_toStartOf="@+id/nine"
        app:layout_constraintHorizontal_weight="1"/>

    <Button
        android:id="@+id/nine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="9"
        android:background="@drawable/button_gradient"
        android:fontFamily="@font/font"
        android:textSize="30sp"
        style="?android:attr/buttonBarStyle"
        app:layout_constraintTop_toBottomOf="@id/four"
        app:layout_constraintStart_toEndOf="@+id/eight"
        app:layout_constraintEnd_toStartOf="@+id/sqrt"
        app:layout_constraintHorizontal_weight="1"/>

    <Button
        android:id="@+id/sqrt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="sqrt"
        android:background="@drawable/button_gradient"
        android:fontFamily="@font/font"
        android:textSize="30sp"
        style="?android:attr/buttonBarStyle"
        app:layout_constraintTop_toBottomOf="@id/four"
        app:layout_constraintStart_toEndOf="@+id/nine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"/>

    <!-- Row 4 -->
    <Button
        android:id="@+id/zero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:background="@drawable/button_gradient"
        android:fontFamily="@font/font"
        android:textSize="30sp"
        style="?android:attr/buttonStyleSmall"
        app:layout_constraintTop_toBottomOf="@id/seven"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/decimal"
        app:layout_constraintHorizontal_weight="2"/>

    <Button
        android:id="@+id/decimal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="."
        android:background="@drawable/button_gradient"
        android:fontFamily="@font/font"
        android:textSize="30sp"
        style="?android:attr/buttonBarStyle"
        app:layout_constraintTop_toBottomOf="@id/seven"
        app:layout_constraintStart_toEndOf="@+id/zero"
        app:layout_constraintEnd_toStartOf="@+id/equal"
        app:layout_constraintHorizontal_weight="1"/>

    <Button
        android:id="@+id/equal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="="
        android:background="@drawable/button_gradient"
        android:fontFamily="@font/font"
        android:textSize="30sp"
        style="?android:attr/buttonBarStyle"
        app:layout_constraintTop_toBottomOf="@id/seven"
        app:layout_constraintStart_toEndOf="@+id/decimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"/>


</androidx.constraintlayout.widget.ConstraintLayout>
